---
import { House, Folder } from 'lucide-svelte';

interface Props {
	title: string;
}

const { title } = Astro.props;
const route = Astro.url.pathname;
console.log(route)
---

<!DOCTYPE html>

<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{title}</title>
	</head>
	<body class="w-screen h-screen overflow-y-scroll">
		<div class="flex flex-col items-center w-full h-full">
			<nav class="flex justify-center gap-12 items-center p-4">
				<a href="/" class="flex items-center gap-2 hover:underline hover:bg-gray-200 p-2 px-4 rounded-md" class:list={[{ "bg-gray-200": route == "/" }]}>
					<House color="black" size={24} />
					<span class="text-lg text-black">Home</span>
				</a>
				<a href="/projects" class="flex items-center gap-2 hover:underline hover:bg-gray-200 p-2 px-4 rounded-md" class:list={[{ "bg-gray-200": route == "/projects" }]}>
					<Folder color="black" size={24} />
					<span class="text-lg text-black">Projects</span>
				</a>
			</nav>
			<slot />
		</div>
	</body>
</html>
