---
import Layout from '../layouts/Layout.astro';
import { Folder } from 'lucide-svelte';
---

<Layout title="Thomas Zhou">
	<main class="h-full w-full">
		<section class="w-screen h-full flex items-center justify-center gap-8 md:gap-16 md:justify-around px-8 lg:px-16 max-md:flex-col">
			<div>
				<img src="/main-image.webp" class="w-3/4 md:w-[45vw] rounded-xl" />
			</div>
			<div class="flex flex-col items-start gap-8">
				<div class="flex flex-col gap-2 items-start">
					<span class="text-8xl">Hello!</span>
					<span class="text-lg max-w-[32rem]">My name is Thomas Zhou. I love programming! In my free time I do web development. </span>
				</div>
				<a class="flex items-center justify-center gap-4 bg-blue-500 hover:bg-blue-600 p-4 px-8 rounded-lg" href="/projects">
					<Folder color="white" size={24} />
					<span class="text-lg text-blue-50">View my projects</span>
				</a>
			</div>
		</section>
	</main>
</Layout>

